<resources>

    <!-- Base application theme. .DarkActionBar-->
    <style name="AppTheme" parent="android:Theme.Holo.Light">
        <!-- Customize your theme here. -->
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Theme.Aldo" parent="@android:style/Theme.Holo.Light.DarkActionBar">
        <item name="android:textSize">16dp</item>
        <item name="android:actionBarItemBackground">@drawable/selectable_background_aldo</item>
        <item name="android:popupMenuStyle">@style/PopupMenu.Aldo</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Aldo</item>
        <item name="android:actionBarTabStyle">@style/ActionBarTabStyle.Aldo</item>
        <item name="android:actionDropDownStyle">@style/DropDownNav.Aldo</item>
        <item name="android:actionBarStyle">@style/ActionBar.Solid.Aldo</item>
        <item name="android:actionModeBackground">@drawable/cab_background_top_aldo</item>
        <item name="android:actionModeSplitBackground">@drawable/cab_background_bottom_aldo</item>
        <item name="android:actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Aldo</item>
        <item name="android:calendarViewStyle">@style/CalendarView.Aldo</item>

        <!-- Light.DarkActionBar specific -->
        <item name="android:actionBarWidgetTheme">@style/Theme.Aldo.Widget</item>
        <!--@color/gray-->
    </style>
    <style name="CalendarView.Aldo" parent="@android:style/Widget.Holo.Light.CalendarView">
       
        <item name="android:selectedWeekBackgroundColor">#75FFE6</item>
        <item name="android:focusedMonthDateColor">#2D635A</item>
        <item name="android:weekDayTextAppearance">@android:style/TextAppearance.Large</item>
        <item name="android:dateTextAppearance">@android:style/TextAppearance.Large</item>


    </style>

    <style name="ActionBar.Solid.Aldo" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@drawable/ab_solid_aldo</item>
        <item name="android:backgroundStacked">@drawable/ab_stacked_solid_aldo</item>
        <item name="android:backgroundSplit">@drawable/ab_bottom_solid_aldo</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Aldo</item>
    </style>

    <style name="ActionBar.Transparent.Aldo" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:background">@drawable/ab_transparent_aldo</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Aldo</item>
    </style>

    <style name="PopupMenu.Aldo" parent="@android:style/Widget.Holo.ListPopupWindow">
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_aldo</item>
    </style>

    <style name="DropDownListView.Aldo" parent="@android:style/Widget.Holo.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_aldo</item>
    </style>

    <style name="ActionBarTabStyle.Aldo" parent="@android:style/Widget.Holo.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_aldo</item>
    </style>

    <style name="DropDownNav.Aldo" parent="@android:style/Widget.Holo.Spinner">
        <item name="android:background">@drawable/spinner_background_ab_aldo</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_aldo</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_aldo</item>
    </style>

    <style name="ProgressBar.Aldo" parent="@android:style/Widget.Holo.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_aldo</item>
    </style>

    <style name="ActionButton.CloseMode.Aldo" parent="@android:style/Widget.Holo.ActionButton.CloseMode">
        <item name="android:background">@drawable/btn_cab_done_aldo</item>
    </style>

    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Aldo.Widget" parent="@android:style/Theme.Holo">
        <item name="android:popupMenuStyle">@style/PopupMenu.Aldo</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Aldo</item>
    </style>

</resources>
